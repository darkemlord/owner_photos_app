<div class="session-new-container">
  <h1>ログイン</h1>
  <% if flash[:alert]%>
    <ul class="error-list">
      <% flash[:alert].each do |error| %>
          <li class="login-error"><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with url: sessions_path do |form| %>
  <div class="form-container">
    <div class="form-section">
      <%= form.label :user_id, "ウーザーID" %><br>
      <%= form.text_field :user_id %>
    </div>

    <div class="form-section">
      <%= form.label :password, "パスワード" %><br>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "ログインする" %>
    </div>
  </div>
  <% end %>
</div>
