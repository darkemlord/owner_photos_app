<div class="session-new-container">
  <h1>ログイン</h1>
  <%= form_with model: @user, url: "sessions/new", method: :get do |form| %>
  <div class="form-container">
    <div class="form-section">
      <% if @user %>
        <% if @user.errors.any? %>
          <div style="color: red;">
            <%= @user.errors.full_messages_for(:user_id).join(", ") %>
            <%= @user.errors.full_messages_for(:user_password).join(", ") %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="form-section">
      <%= form.label :user_id, "ウーザーID" %><br>
      <%= form.text_field :user_id %>
    </div>

    <div class="form-section">
      <%= form.label :user_password, "パスワード" %><br>
      <%= form.password_field :user_password %>
    </div>

    <div>
      <%= form.submit "ログインする" %>
    </div>
  </div>
  <% end %>
</div>
