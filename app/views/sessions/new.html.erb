<div class="session-new-container">
  <h1>ログイン</h1>
  <%= form_with scope: :session, url: sessions_path, local: true do |form| %>
  <div class="form-container">
    <div class="form-section">
      <%= form.label :user_id, "ウーザーID" %><br>
      <%= form.text_field :user_id %>
    </div>

    <div class="form-section">
      <%= form.label :user_password, "パスワード" %><br>
      <%= form.password_field :user_password %>
    </div>

    <div>
      <%= form.submit "ログインする" %>
    </div>
  </div>
  <% end %>
</div>
